@{ ViewData["Title"] = "Welcome to Match!"; }
<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <div class="registration-card">
            <img class="logo" src="~/images/match-logo-img.png" alt="company logo">
             @{
                        if(ViewBag.Error != null){
                            <h5>@ViewBag.Error</h5>
                        }
                    }
            <form asp-controller="Home" asp-action="LogIn" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" class="form-control" id="email" aria-describedby="nameHelp" placeholder="iamdesperate@match.com">
                    @{
                        if(ViewBag.UserError != null){
                             <small id="nameHelp" class="form-text text-muted">@ViewBag.UserError</small>
                        }
                    }
                   
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" class="form-control" id="password" aria-describedby="passwordHelp">
                     @{
                        if(ViewBag.PasswordError != null){
                            <small id="passwordHelp" class="form-text text-muted">@ViewBag.PasswordError</small>
                        }
                    }
                    
                </div>
                <button type="submit" class="btn btn-primary">Log In</button>
            </form>
        </div>
    </div>
    <div class="col-sm-3"></div>
</div>