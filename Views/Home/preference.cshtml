@{ ViewData["Title"] = "Welcome to Match!"; }

<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <div class="registration-card">
            <img class="logo" src="~/images/match-logo-img.png" alt="company logo">
            <h3>Select Your Preferences</h3>
            <form asp-controller="Home" asp-action="Preference" class="form-horizontal">
                <div class="form-group">
                    <label for="smoke" class="preference-label col-sm-2 control-label">Smoker</label>
                    <div class="col-sm-5">
                        <div class="radio">
                            <label class="radio-inline">
                                <input type="radio" name="smoke" id="inlineRadio1" value="1"> Ok
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="smoke" id="inlineRadio2" value="0"> No
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="relationship" class="preference-label col-sm-2 control-label">Relationship</label>
                    <div class="col-sm-5">
                        <div class="radio">
                            <label class="radio-inline">
                                <input type="radio" name="relationship" id="inlineRadio1" value="1"> Never Married
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="relationship" id="inlineRadio2" value="2"> Divorced
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="relationship" id="inlineRadio2" value="3"> Seperated
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="relationship" id="inlineRadio2" value="4"> Married
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="drink" class="preference-label col-sm-2 control-label">Drink</label>
                    <div class="col-sm-5">
                        <div class="radio">
                            <label class="radio-inline">
                                <input type="radio" name="drink" id="inlineRadio1" value="1"> Ok
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="drink" id="inlineRadio2" value="0"> No
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="religion" class="preference-label col-sm-2 control-label">Religion</label>
                    <div class="col-sm-5">
                        <div class="radio">
                            <label class="radio-inline">
                                <input type="radio" name="religion" id="inlineRadio1" value="1"> Buddhism
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="religion" id="inlineRadio2" value="2"> Christianity
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="religion" id="inlineRadio2" value="3"> Islam
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="religion" id="inlineRadio2" value="4"> Other
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="religion" id="inlineRadio2" value="0"> Don't Care
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="bodytype" class="preference-label col-sm-2 control-label">Body Type</label>
                    <div class="col-sm-5">
                        <div class="radio">
                            <label class="radio-inline">
                                <input type="radio" name="bodytype" id="inlineRadio1" value="1"> Slim
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="bodytype" id="inlineRadio2" value="2"> Average
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="bodytype" id="inlineRadio2" value="3"> Above Average
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="bodytype" id="inlineRadio2" value="4"> Big
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="bodytype" id="inlineRadio2" value="0"> Don't Care
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="git " class="preference-label col-sm-2 control-label">Ethnicity</label>
                    <div class="col-sm-5">
                        <div class="radio">
                            <label class="radio-inline">
                                <input type="radio" name="ethnicity" id="inlineRadio1" value="1"> Asian
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="ethnicity" id="inlineRadio2" value="2"> African-American
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="ethnicity" id="inlineRadio2" value="3"> White
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="ethnicity" id="inlineRadio2" value="4"> Latino
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="ethnicity" id="inlineRadio2" value="5"> Other
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="ethnicity" id="inlineRadio2" value="0"> Don't Care
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="kid" class="preference-label col-sm-2 control-label">Kid</label>
                    <div class="col-sm-5">
                        <div class="radio">
                            <label class="radio-inline">
                                <input type="radio" name="kid" id="inlineRadio1" value="1"> Ok
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="kid" id="inlineRadio2" value="0"> No
                            </label>
                        </div>
                    </div>
                </div>
                 <div class="form-group">
                    <label for="height" class="col-sm-2 control-label">height</label>
                    <div class="col-sm-5">
                        <select name="foot"class="form-control" id="foot">
                            <option value="0">Foot</option>
                            @{
                                for(var i = 1; i <= 6; i++){
                                    <option value="@i">@i</option>
                                }
                            }
                            
                        </select>
                    </div>
                    <div class="col-sm-5">
                        <select name="inch"class="form-control" id="inch">
                            <option value="0">Inch</option>
                              @{
                                for(var i = 0; i <= 11; i++){
                                    <option value="@i">@i</option>
                                }
                            }
                           
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success">Let's Go!</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
    <div class="col-sm-3"></div>
</div>