@model match.Models.UserdetailViewModel
@{ 
    ViewData["Title"] = "Your details!";
}
<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <div class="registration-card">
            <img class="logo" src="~/images/match-logo-img.png" alt="company logo">
            <h4><a href='/logout'>Log Out</a></h4><br><br><br>
            <form asp-controller="Home" asp-action="/adddetails" method="POST">
                <div class="form-group">
                    <label for="gender">Gender:</label>
                    <select name='gender'>
                        <option value='Male'>Male</option>
                        <option value='Female'>Female</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="givenname">First Name:</label>
                    <input asp-for="givenname" type="string" name="givenname" class="form-control" id="givenname" aria-describedby="givennameHelp">
                    <small id="givennameHelp" class="form-text text-muted"><span asp-validation-for="givenname"></span></small>
                </div>
                <div class="form-group">
                    <label for="middleinitial">Middle (initial):</label>
                    <input asp-for="middleinitial" type="text" name="middleinitial" class="form-control" id="middleinitial" aria-describedby="middleinitialHelp">
                    <small id="middleinitialHelp" class="form-text text-muted"><span asp-validation-for="middleinitial"></span></small>
                </div>
                <div class="form-group">
                    <label for="surname">Last Name:</label>
                    <input asp-for="surname" type="text" name="surname" class="form-control" id="surname" aria-describedby="surnameHelp">
                    <small id="surnameHelp" class="form-text text-muted"><span asp-validation-for="surname"></span></small>
                </div>
                <div class="form-group">
                    <label for="zip">Zip Code:</label>
                    <input asp-for="zip" type="text" name="zip" class="form-control" id="zip" aria-describedby="zipHelp">
                    <small id="zipHelp" class="form-text text-muted"><span asp-validation-for="zip"></span></small>
                </div>
                <div class="form-group">
                    <label for="city">City:</label>
                    <input asp-for="city" type="text" name="city" class="form-control" id="city" aria-describedby="cityHelp">
                    <small id="cityHelp" class="form-text text-muted"><span asp-validation-for="city"></span></small>
                </div>
                <div class="form-group">
                    <label for="state">State:</label>
                    <input asp-for="state" type="text" name="state" class="form-control" id="state" aria-describedby="stateHelp">
                    <small id="stateHelp" class="form-text text-muted"><span asp-validation-for="state"></span></small>
                </div>
                <div class="form-group">
                    <label for="streetaddress">Street Address:</label>
                    <input asp-for="streetaddress" type="text" name="streetaddress" class="form-control" id="streetaddress" aria-describedby="streetaddressHelp">
                    <small id="streetaddressHelp" class="form-text text-muted"><span asp-validation-for="streetaddress"></span></small>
                </div>
                <button type="submit" class="btn btn-primary">Continue</button>
            </form>
        </div>
    </div>
    <div class="col-sm-3"></div>
</div>