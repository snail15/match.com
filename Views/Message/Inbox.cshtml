  @{ Layout = null; }
  
  <!DOCTYPE html>
  <html lang="en">
      <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css'>
        <link rel="stylesheet" href="~/css/dashboard.css">
        <title>Inbox</title>
      </head>
      <body>
      <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a asp-controller ="Home" asp-action="Inbox" class="list-group-item"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Inbox<span class="badge">12</span> </a>
                    <a asp-controller ="Home" asp-action="Sent" class="list-group-item"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Sent<span class="badge">20</span></a>
                    <a asp-controller ="Home" asp-action="Trash" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Trash<span class="badge">44</span></a>
                </div>
            </div>
            <div class="col-md-9">
        <h3>Inbox</h3>

                    <table class="table">
                    <thead class="thead-inverse">
                    <tr>
                    <th>Sender</th>
                    <th>Date</th>
                    <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    @{ foreach(var message in ViewBag.InMessages)
                        {
                            <tr>
                                <td>@message.sender</td>
                                <td>@message.created_at</td>
                                <td>
                                    <a asp-controller="Home" asp-action="viewMessage" asp-route-id="@message.Id">View</a> | 
                                    <a asp-controller="Home" asp-action="deleteMessage" asp-route-id="@message.Id">Delete!</a>
                                </td>
                                    
                            </tr>
                        } 
                    }
                    </table>
            </div>
	</div>
</div>
 
</body>
  </html>
  